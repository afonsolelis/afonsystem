<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-folder fs-2 text-primary"></i>
        <h3 class="mt-2"><%= stats.projects %></h3>
        <p class="text-muted mb-0">Projetos</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-git fs-2 text-success"></i>
        <h3 class="mt-2"><%= stats.commits %></h3>
        <p class="text-muted mb-0">Commits</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-arrow-left-right fs-2 text-warning"></i>
        <h3 class="mt-2"><%= stats.mergeRequests %></h3>
        <p class="text-muted mb-0">Merge Requests</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-exclamation-circle fs-2 text-danger"></i>
        <h3 class="mt-2"><%= stats.issues %></h3>
        <p class="text-muted mb-0">Issues</p>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-stars fs-2 text-info"></i>
        <h3 class="mt-2"><%= stats.ccFeat %></h3>
        <p class="text-muted mb-0">feat:</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-bug fs-2 text-danger"></i>
        <h3 class="mt-2"><%= stats.ccFix %></h3>
        <p class="text-muted mb-0">fix:</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-file-earmark-text fs-2 text-primary"></i>
        <h3 class="mt-2"><%= stats.ccDocs %></h3>
        <p class="text-muted mb-0">docs:</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="bi bi-wrench fs-2 text-secondary"></i>
        <h3 class="mt-2"><%= stats.ccChore %></h3>
        <p class="text-muted mb-0">chore:</p>
      </div>
    </div>
  </div>
</div>
